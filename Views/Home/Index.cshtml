@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center mt-4">
    <h1 class="display-5 mb-3">Chào mừng bạn đến hệ thống quản lý</h1>
    <p class="lead text-muted">Chọn một mục ở thanh điều hướng hoặc trong danh sách dưới đây để bắt đầu làm việc.</p>

    <div class="row mt-5">
        <!-- Products -->
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-sm border-0 text-center">
                <div class="card-body">
                    <i class="bi bi-box fs-1 text-primary"></i>
                    <h5 class="mt-3">Sản phẩm (Product)</h5>
                    <p>Quản lý thông tin sản phẩm.</p>
                    @Html.ActionLink("Đi đến", "Index", "Products", null, new { @class = "btn btn-outline-primary btn-sm" })
                </div>
            </div>
        </div>

        <!-- Orders -->
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-sm border-0 text-center">
                <div class="card-body">
                    <i class="bi bi-receipt fs-1 text-success"></i>
                    <h5 class="mt-3">Đơn hàng (Order)</h5>
                    <p>Xử lý và theo dõi đơn hàng.</p>
                    @Html.ActionLink("Đi đến", "Index", "Orders", null, new { @class = "btn btn-outline-success btn-sm" })
                </div>
            </div>
        </div>

        <!-- Customers -->
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-sm border-0 text-center">
                <div class="card-body">
                    <i class="bi bi-person fs-1 text-warning"></i>
                    <h5 class="mt-3">Khách hàng (Customer)</h5>
                    <p>Thông tin khách hàng.</p>
                    @Html.ActionLink("Đi đến", "Index", "Customers", null, new { @class = "btn btn-outline-warning btn-sm" })
                </div>
            </div>
        </div>

        <!-- Employees -->
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-sm border-0 text-center">
                <div class="card-body">
                    <i class="bi bi-people fs-1 text-danger"></i>
                    <h5 class="mt-3">Nhân viên (Employee)</h5>
                    <p>Danh sách nhân viên.</p>
                    @Html.ActionLink("Đi đến", "Index", "Employees", null, new { @class = "btn btn-outline-danger btn-sm" })
                </div>
            </div>
        </div>

        <!-- Regions -->
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-sm border-0 text-center">
                <div class="card-body">
                    <i class="bi bi-globe fs-1 text-info"></i>
                    <h5 class="mt-3">Khu vực (Region)</h5>
                    <p>Quản lý vùng phân phối.</p>
                    @Html.ActionLink("Đi đến", "Index", "Region", null, new { @class = "btn btn-outline-info btn-sm" })
                </div>
            </div>
        </div>

        <!-- Territories -->
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-sm border-0 text-center">
                <div class="card-body">
                    <i class="bi bi-map fs-1 text-secondary"></i>
                    <h5 class="mt-3">Khu vực con (Territory)</h5>
                    <p>Phân vùng lãnh thổ.</p>
                    @Html.ActionLink("Đi đến", "Index", "Territories", null, new { @class = "btn btn-outline-secondary btn-sm" })
                </div>
            </div>
        </div>

        <!-- Shippers -->
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-sm border-0 text-center">
                <div class="card-body">
                    <i class="bi bi-truck fs-1 text-dark"></i>
                    <h5 class="mt-3">Nhà vận chuyển (Shipper)</h5>
                    <p>Thông tin đối tác vận chuyển.</p>
                    @Html.ActionLink("Đi đến", "Index", "Shippers", null, new { @class = "btn btn-outline-dark btn-sm" })
                </div>
            </div>
        </div>

        <!-- Categories -->
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-sm border-0 text-center">
                <div class="card-body">
                    <i class="bi bi-tags fs-1 text-muted"></i>
                    <h5 class="mt-3">Danh mục (Category) </h5>
                    <p>Phân loại sản phẩm.</p>
                    @Html.ActionLink("Đi đến", "Index", "Categories", null, new { @class = "btn btn-outline-secondary btn-sm" })
                </div>
            </div>
        </div>

        <!-- Order Details -->
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-sm border-0 text-center">
                <div class="card-body">
                    <i class="bi bi-list-check fs-1 text-primary"></i>
                    <h5 class="mt-3">Chi tiết đơn hàng (Order_detail)</h5>
                    <p>Quản lý chi tiết từng đơn hàng.</p>
                    @Html.ActionLink("Đi đến", "Index", "OrderDetails", null, new { @class = "btn btn-outline-primary btn-sm" })
                </div>
            </div>
        </div>
    </div>
</div>
